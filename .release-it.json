{
  "hooks": {
    "before:init": "npm run test -- --run",
    "after:@release-it/bumper:bump": [
      "npm i",
      "npm run build"
    ],
    "before:github:release": [
      "npm run copy",
      "npm run sign",
      "npm run package",
      "git push --follow-tags"
    ],
    "after:release": [
      "TAG_NAME=v${version} npm run upload"
    ]
  },
  "git": {
    "push": false
  },
  "npm": false,
  "github": {
    "release": true,
    "assets": [
      "money.tar.gz"
    ]
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "package.json",
        "appinfo/info.xml"
      ]
    },
    "@release-it/keep-a-changelog": {
      "addUnreleased": true
    }
  }
}
